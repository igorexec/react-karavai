{
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "rules": {
    "quotes": ["error", "single"],
    "comma-dangle": ["error", "never"],
    "semi": ["error", "never"]
  }
}
